@model WebApplication1.Models.Person

@{
    ViewData["Title"] = "Front Page";
}

<h1>Front Page — All Data On One Page</h1>



<form asp-action="Index" method="post">
    @Html.AntiForgeryToken()
    <div>
        <label for="Name">Name</label><br />
        <input asp-for="Name" id="Name" />
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div>
        <label for="Age">Age</label><br />
        <input asp-for="Age" id="Age" type="number" />
        @Html.ValidationMessageFor(m => m.Age)
    </div>

    <div>
        <label for="College">College</label><br />
        <input asp-for="College" id="College" />
        @Html.ValidationMessageFor(m => m.College)
    </div>

    <div style="margin-top:10px;">
        <button type="submit">Submit</button>
    </div>
</form>

<hr />

<h2>Current Data</h2>

<p><strong>Name:</strong> @Model?.Name</p>
<p><strong>Age:</strong> @(Model?.Age?.ToString() ?? "Not provided")</p>
<p><strong>College:</strong> @Model?.College</p>

@if (ViewData["SubmittedAt"] != null)
{
    <p><em>Last submitted: @ViewData["SubmittedAt"]</em></p>
}
